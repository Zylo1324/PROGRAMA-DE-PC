<Window x:Class="UnidorExacto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UnidorExacto"
        Title="UnidorExacto" Height="620" Width="720">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button Grid.Row="0"
                Content="Agregar archivos"
                Width="160"
                Margin="0,0,0,8"
                HorizontalAlignment="Left"
                Click="AddFiles_Click"
                IsEnabled="{Binding IsNotBusy}" />

        <ListBox Grid.Row="1"
                 ItemsSource="{Binding SelectedFiles}" />

        <GroupBox Grid.Row="2"
                  Header="Avanzado"
                  Margin="0,8,0,0">
            <StackPanel Margin="8">
                <CheckBox Content="Activar modo avanzado"
                          IsChecked="{Binding AdvancedEnabled}" />

                <StackPanel Margin="0,8,0,0"
                            IsEnabled="{Binding AdvancedEnabled}">
                    <ComboBox SelectedValue="{Binding AdvancedMode}"
                              SelectedValuePath="Tag">
                        <ComboBoxItem Content="FILTRAR (solo dejar)"
                                      Tag="{x:Static local:AdvancedFilterMode.Filter}" />
                        <ComboBoxItem Content="ELIMINAR (quitar)"
                                      Tag="{x:Static local:AdvancedFilterMode.Remove}" />
                    </ComboBox>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,8,0,0">
                        <TextBox Width="260"
                                 Text="{Binding KeywordInput, UpdateSourceTrigger=PropertyChanged}" />
                        <Button Content="+ Agregar"
                                Width="90"
                                Margin="8,0,0,0"
                                Click="AddKeyword_Click"
                                IsEnabled="{Binding IsNotBusy}" />
                    </StackPanel>

                    <ListBox ItemsSource="{Binding Keywords}"
                             Height="120"
                             Margin="0,8,0,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <Button Content="X"
                                            DockPanel.Dock="Right"
                                            Padding="6,0"
                                            Margin="8,0,0,0"
                                            Click="RemoveKeyword_Click"
                                            IsEnabled="{Binding DataContext.IsNotBusy, RelativeSource={RelativeSource AncestorType=Window}}" />
                                    <TextBlock Text="{Binding}"
                                               VerticalAlignment="Center" />
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <CheckBox Content="Ignorar mayúsculas"
                              Margin="0,8,0,0"
                              IsChecked="{Binding IgnoreCase}" />

                    <GroupBox Header="Transformaciones"
                              Margin="0,12,0,0">
                        <StackPanel Margin="8,6,8,8">
                            <CheckBox Content="Extraer acceso válido (site/ruido → correo:pass o user:pass)"
                                      IsChecked="{Binding TransformStripSite}" />
                            <CheckBox Content="Quitar espacios (trim)"
                                      Margin="0,6,0,0"
                                      IsChecked="{Binding TransformTrimWhitespace}" />
                            <CheckBox Content="Eliminar líneas vacías"
                                      Margin="0,6,0,0"
                                      IsChecked="{Binding TransformRemoveEmptyLines}" />
                            <CheckBox Content="Normalizar separadores (| ; , → :)"
                                      Margin="0,6,0,0"
                                      IsChecked="{Binding TransformNormalizeSeparators}" />
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    Margin="0,8,0,0"
                    HorizontalAlignment="Left">
            <Button Content="Unir y guardar"
                    Width="160"
                    Margin="0,0,8,0"
                    Click="MergeAndSave_Click"
                    IsEnabled="{Binding IsNotBusy}" />
            <Button Content="Limpiar lista"
                    Width="160"
                    Click="ClearFiles_Click"
                    IsEnabled="{Binding IsNotBusy}" />
        </StackPanel>

        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    Margin="0,8,0,0"
                    VerticalAlignment="Center">
            <ProgressBar Width="180"
                         Height="16"
                         Margin="0,0,8,0"
                         IsIndeterminate="True"
                         IsEnabled="{Binding IsBusy}" />
            <TextBlock Text="{Binding StatusMessage}"
                       VerticalAlignment="Center" />
            <Button Content="Cancelar"
                    Width="120"
                    Margin="12,0,0,0"
                    Click="CancelProcessing_Click"
                    IsEnabled="{Binding IsBusy}" />
        </StackPanel>
    </Grid>
</Window>
