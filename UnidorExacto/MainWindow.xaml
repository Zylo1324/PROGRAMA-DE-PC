<Window x:Class="UnidorExacto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UnidorExacto"
        Title="UnidorExacto" Height="580" Width="720">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button Grid.Row="0"
                Content="Agregar archivos"
                Width="160"
                Margin="0,0,0,8"
                HorizontalAlignment="Left"
                Click="AddFiles_Click" />

        <ListBox Grid.Row="1"
                 ItemsSource="{Binding SelectedFiles}" />

        <GroupBox Grid.Row="2"
                  Header="Avanzado"
                  Margin="0,8,0,0">
            <StackPanel Margin="8">
                <CheckBox Content="Activar modo avanzado"
                          IsChecked="{Binding AdvancedEnabled}" />

                <StackPanel Margin="0,8,0,0"
                            IsEnabled="{Binding AdvancedEnabled}">
                    <ComboBox SelectedValue="{Binding AdvancedMode}"
                              SelectedValuePath="Tag">
                        <ComboBoxItem Content="FILTRAR (solo dejar)"
                                      Tag="{x:Static local:AdvancedFilterMode.Filter}" />
                        <ComboBoxItem Content="ELIMINAR (quitar)"
                                      Tag="{x:Static local:AdvancedFilterMode.Remove}" />
                    </ComboBox>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,8,0,0">
                        <TextBox Width="260"
                                 Text="{Binding KeywordInput, UpdateSourceTrigger=PropertyChanged}" />
                        <Button Content="+ Agregar"
                                Width="90"
                                Margin="8,0,0,0"
                                Click="AddKeyword_Click" />
                    </StackPanel>

                    <ListBox ItemsSource="{Binding Keywords}"
                             Height="120"
                             Margin="0,8,0,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <Button Content="X"
                                            DockPanel.Dock="Right"
                                            Padding="6,0"
                                            Margin="8,0,0,0"
                                            Click="RemoveKeyword_Click" />
                                    <TextBlock Text="{Binding}"
                                               VerticalAlignment="Center" />
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <CheckBox Content="Ignorar mayÃºsculas"
                              Margin="0,8,0,0"
                              IsChecked="{Binding IgnoreCase}" />
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    Margin="0,8,0,0"
                    HorizontalAlignment="Left">
            <Button Content="Unir y guardar"
                    Width="160"
                    Margin="0,0,8,0"
                    Click="MergeAndSave_Click" />
            <Button Content="Limpiar lista"
                    Width="160"
                    Click="ClearFiles_Click" />
        </StackPanel>
    </Grid>
</Window>
