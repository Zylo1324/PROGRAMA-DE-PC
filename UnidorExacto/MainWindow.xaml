<Window x:Class="UnidorExacto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UnidorExacto"
        Width="900"
        Height="560"
        MinWidth="760"
        MinHeight="480"
        FontFamily="Segoe UI">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0F0F12" Offset="0" />
            <GradientStop Color="#1C1C26" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="48" />
            <Setter Property="Padding" Value="16,0,16,0" />
            <Setter Property="Background" Value="#F4F5F7" />
            <Setter Property="BorderBrush" Value="#D6D9DE" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#1B1B1B" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#E9EBF0" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#DFE3EA" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Height" Value="52" />
            <Setter Property="Background" Value="#4C6FFF" />
            <Setter Property="BorderBrush" Value="#4C6FFF" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Margin" Value="0,4" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="ItemBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#EEF1F6" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#E2E8F5" />
                                <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#CBD5E1" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Background="White"
                CornerRadius="16"
                Padding="18"
                Margin="0,0,24,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20"
                                  Opacity="0.18"
                                  ShadowDepth="2"
                                  Color="#000000" />
            </Border.Effect>
            <StackPanel VerticalAlignment="Top">
                <Button Content="Agregar archivos"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,0,0,12"
                        Click="AddFiles_Click" />
                <Button Content="Limpiar lista"
                        Margin="0,0,0,12"
                        Click="ClearFiles_Click" />
                <Button Content="Unir y guardar"
                        Style="{StaticResource PrimaryButton}"
                        Click="MergeAndSave_Click" />
            </StackPanel>
        </Border>

        <Border Grid.Column="1"
                Background="White"
                CornerRadius="16"
                Padding="18">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20"
                                  Opacity="0.18"
                                  ShadowDepth="2"
                                  Color="#000000" />
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="#F6F7FB"
                        CornerRadius="10"
                        Padding="10"
                        Margin="0,0,0,14">
                    <TextBlock Text="Archivos seleccionados"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#4B5563" />
                </Border>

                <Border Grid.Row="1"
                        Background="#FAFAFA"
                        BorderBrush="#E3E5E8"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="10"
                        ClipToBounds="True">
                    <ListBox ItemsSource="{Binding SelectedFiles}" />
                </Border>

                <Border Grid.Row="2"
                        Background="#F6F7FB"
                        CornerRadius="10"
                        Padding="10"
                        Margin="0,14,0,0">
                    <TextBlock FontSize="12"
                               Foreground="#4B5563"
                               Text="{Binding SelectedFiles.Count, StringFormat=Total: {0} archivo(s)}" />
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
