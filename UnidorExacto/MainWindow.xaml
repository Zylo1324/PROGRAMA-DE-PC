<Window x:Class="UnidorExacto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System.Windows;assembly=PresentationFramework"
        Title="UnidorExacto"
        Height="450"
        Width="700">
    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button Grid.Row="0"
                Content="Agregar archivos"
                Width="160"
                Margin="0,0,0,8"
                HorizontalAlignment="Left"
                Click="AddFiles_Click"
                Style="{StaticResource RoundedButtonStyle}" />

        <Border Grid.Row="1"
                CornerRadius="20"
                BorderThickness="1"
                BorderBrush="{DynamicResource {x:Static sys:SystemColors.ControlDarkBrushKey}}">
            <ListBox ItemsSource="{Binding SelectedFiles}"
                     BorderThickness="0" />
        </Border>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal">
            <Button Content="Unir y guardar"
                    Width="160"
                    Height="30"
                    Margin="0,8,8,0"
                    Click="MergeAndSave_Click"
                    Style="{StaticResource RoundedButtonStyle}" />
            <Button Content="Limpiar lista"
                    Width="160"
                    Height="30"
                    Margin="0,8,0,0"
                    Click="ClearFiles_Click"
                    Style="{StaticResource RoundedButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
